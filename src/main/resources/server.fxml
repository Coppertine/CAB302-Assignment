<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cab302qut.java.Server.Controller.ServerController">
   <children>
      <BorderPane prefHeight="400.0" prefWidth="618.0">
         <center>
            <TextArea fx:id="consoleField" prefHeight="334.0" prefWidth="565.0" BorderPane.alignment="CENTER" />
         </center>
         <bottom>
            <HBox alignment="CENTER" prefHeight="30.0" prefWidth="618.0" spacing="10.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="startServerBtn" mnemonicParsing="false" onAction="#StartServer" text="Start Server" />
                  <Button fx:id="stopServerBtn" disable="true" layoutX="280.0" layoutY="12.0" mnemonicParsing="false" onAction="#StopServer" text="Stop Server" />
               </children>
            </HBox>
         </bottom>
      </BorderPane>
   </children>
</AnchorPane>
